	journal = {Systematic Biology},
	author = {Meseguer, Andrea S. and Lobo, Jorge M. and Ree, Richard and Beerling, David J. and Sanmartín, Isabel},
	month = nov,
	year = {2014},
	pmid = {25398444},
	keywords = {Biogeography, Cenozoic climate change, environmental niche modeling, Extinction, fossils, Hypericum, phylogenetics},
