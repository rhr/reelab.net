	journal = {Journal of Systematics and Evolution},
	author = {Yue, Ji-Pei and Sun, Hang and Baum, David A. and Li, Jian-Hua and Al-Shebaz, Ihsan A. and Ree, Richard},
	year = {2009},
	pages = {402--415},
	file = {Wiley InterScience \:\: Article Full Text HTML:/home/rree/Dropbox/zotero/storage/N4TX9TJP/main.html,journal-article.html:text/html;Yue_et_al-2009-JSE.pdf:/home/rree/Dropbox/zotero/storage/RJTA3RXT/Yue_et_al-2009-JSE.pdf:application/pdf}
